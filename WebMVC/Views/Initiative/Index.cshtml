@model WebMVC.Models.InitaitiveTransViewModel

@{
    ViewBag.Title = "Inicjatywa";
}

<h1>Inicjatywa</h1>

<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Inicjatywa</th>
                <th scope="col">Nazwa Gracza</th>
                <th scope="col">PŻ</th>
                <th scope="col">Bonus</th>
                <th scope="col">AC</th>
                <th scope="col">Usuń</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
            <tr>
                <td>@item.Initiative</td>
                <td>@item.Name</td>
                <td>@item.HP</td>
                <td>@item.InitiativeBonus</td>
                <td>@item.AC</td>
                <td><a href="../Initiative/Delete/@item.Id"> X </a></td>
            </tr>
            }
        </tbody>
    </table>

    @using (Html.BeginForm("Create",
                        "Initiative",
                        FormMethod.Post,
                        new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken();

      <div>
            <input id="InitiativeBonus-Input" name="InitiativeBonus" type="number" value="" />
            <input id="Name-Input" name="Name" type="text" value="" />
            <input id="HP-Input" name="HP" type="number" value="" />
            <input id="Initiative-Input" name="Initiative" type="number" value="" />
            <input id="AC-Input" name="AC" type="number" value="" />

            <input type="submit" value="Zastosuj" class="btn btn-primary" id="Submit-Button" />
      </div>




    }
    </div>




