@model List<BackgroundLogic.Models.CreatureModel>


<h1>CreatureList</h1>
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
    Dodaj stworzenie
</button>

<div>
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation"><a href="#player" aria-controls="player" role="tab" data-toggle="tab">Gracze</a></li>
        <li role="presentation"><a href="#enemy" aria-controls="enemy" role="tab" data-toggle="tab">Przeciwnicy</a></li>
        <li role="presentation"><a href="#npc" aria-controls="npc" role="tab" data-toggle="tab">NPC</a></li>
    </ul>

    




    <div>
        <div class="row" style="font-weight:bold;">
                <div class="col-md-3">Nazwa</div>
                <div class="col-md-2">PŻ</div>
                <div class="col-md-2">Bonus</div>
                <div class="col-md-2">AC</div>
                <div class="col-md-2"></div>
        </div>
        <!-- Tab panes -->
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane" id="player">
                <div class="row">
                    @foreach (var item in Model.FindAll(item => item.CreatureType == BackgroundLogic.Helpers.CreatureTypeEnum.player))
                    {
                        <div class="col-md-3">@item.Name</div>
                        <div class="col-md-2">@item.HP</div>
                        <div class="col-md-2">@item.InitiativeBonus</div>
                        <div class="col-md-2">@item.AC</div>
                        <div class="col-md-1"><a href="../Creature/Delete/@item.Id"> X </a></div>

                        <div class="col-md-2" style="width:40px; max-width:40px;">
                            <a href="Creature/AddToInit/@item.Id">
                                -->
                            </a>
                        </div>
                    }
                </div>
            </div>



            <div role="tabpanel" class="tab-pane" id="enemy">
                <div class="row">
                    @foreach (var item in Model.FindAll(item => item.CreatureType == BackgroundLogic.Helpers.CreatureTypeEnum.enemy))
                    {
                        <div class="col-md-3">@item.Name</div>
                        <div class="col-md-2">@item.HP</div>
                        <div class="col-md-2">@item.InitiativeBonus</div>
                        <div class="col-md-2">@item.AC</div>
                        <div class="col-md-1"><a href="../Creature/Delete/@item.Id"> X </a></div>

                        <div class="col-md-2" style="width:40px; max-width:40px;">
                            <a href="Creature/AddToInit/@item.Id">
                                -->
                            </a>
                        </div>
                    }
                </div>
            </div>



            <div role="tabpanel" class="tab-pane" id="npc">
                <div class="row">
                    @foreach (var item in Model.FindAll(item => item.CreatureType == BackgroundLogic.Helpers.CreatureTypeEnum.npc))
                    {
                        <div class="col-md-3">@item.Name</div>
                        <div class="col-md-2">@item.HP</div>
                        <div class="col-md-2">@item.InitiativeBonus</div>
                        <div class="col-md-2">@item.AC</div>
                        <div class="col-md-1"><a href="../Creature/Delete/@item.Id"> X </a></div>

                        <div class="col-md-2" style="width:40px; max-width:40px;">
                            <a href="Creature/AddToInit/@item.Id">
                                -->
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
        
    </div>


</div>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Dodaj stworzenie</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Create",
                        "Creature",
                        FormMethod.Post,
                        new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken();
                        
                    <div>
                        Rodzaj stworzenia
                        @Html.DropDownList("CreatureType", new SelectList(new List<string> { "player", "enemy", "npc" }))
                        Nazwa
                        <input id="Name-Input" name="Name" type="text" value="" style="max-width: 300px; width: 300px;" /><br />
                        HP
                        <input id="HP-Input" name="HP" type="number" value="" style="max-width: 50px" /><br />
                        Bonus do inicatywy
                        <input id="InitiativeBonus-Input" name="InitiativeBonus" type="number" value="" style="max-width: 40px" /><br />
                        AC
                        <input id="AC-Input" name="AC" type="number" value="" style="max-width: 40px" /><br />
                        <input type="submit" value="Dodaj" class="btn btn-primary" id="Submit-Button" />
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Zamknij</button>
            </div>
        </div>
    </div>
</div>