@model List<BackgroundLogic.Models.CreatureModel>


<h1>CreatureList</h1>

<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Inicjatywa</th>
                <th scope="col">Nazwa Gracza</th>
                <th scope="col">PŻ</th>
                <th scope="col">Bonus</th>
                <th scope="col">AC</th>
                <th scope="col">Usuń</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Initiative</td>
                    <td>@item.Name</td>
                    <td>@item.HP</td>
                    <td>@item.InitiativeBonus</td>
                    <td>@item.AC</td>
                    <td><a href="../Initiative/Delete/@item.Id"> X </a></td>
                </tr>
           
            }
        </tbody>
    </table>


</div>